@model Atlas_Web.Pages.Reports.IndexModel

<nav id="maintenance" class="panel">
    <div class="panel-heading">
        Maintenance Logs
    </div>
    @foreach (var log in Model.Report.ReportObjectDoc.ReportObjectDocMaintenanceLogs)
    {
        <div class="panel-block">
            @if (Configuration["features:enable_user_profile"] == null || Configuration["features:enable_user_profile"].ToString().ToLower() == "true")
            {
                <a href="/users?id=@log.MaintenanceLog.MaintainerId">@log.MaintenanceLog.Maintainer.FullnameCalc</a>
            } else
            {
                @log.MaintenanceLog.Maintainer.FullnameCalc
            }
            <span class="text-muted">&nbsp;Â·&nbsp;@log.MaintenanceLog.MaintenanceDateDisplayString&nbsp;</span>
            @if (log.MaintenanceLog.MaintenanceLogStatus != null)
            {
                    @log.MaintenanceLog.MaintenanceLogStatus.MaintenanceLogStatusName<text>&nbsp;</text>
            }
            @if (!string.IsNullOrEmpty(log.MaintenanceLog.Comment))
            {
                <div class="markdown">
                    @Html.Raw(@Helpers.HtmlHelpers.MarkdownToHtml(log.MaintenanceLog.Comment))
                </div>
            }
        </div>
    }
</nav>
